<div class='row'>
  <div class='col-md-10'>
    <h1><%= "ID. #{@user.id} - #{@user.username} lists" %></h1>
    <%= link_to 'New List', new_list_path, class: 'btn btn-default navbar-btn' %>
        <%= link_to 'All', lists_path(view: 'all'), class: 'btn btn-default navbar-btn' unless params[:view]=='all'%>
        <%= link_to 'My Lists', lists_path, class: 'btn btn-default navbar-btn' if params.has_key?(:view) %>

    <table class='table'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Permissions</th>
          <th>ID</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lists.each do |list| %>
          <tr>
            <td><%= list.title %></td>
            <td><%= list.permissions %></td>
            <td><%= list.id %></td>
            <td><%= link_to 'Show', list, class: 'btn btn-default btn-sm' %></td>
            <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-default btn-sm' %></td>
            <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


    <br>
  </div>
</div>